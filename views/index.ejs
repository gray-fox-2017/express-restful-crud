<%- include ./partials/header.ejs %>
  <body>
    <div class="container">
      <div class="">
        <h4 class="center-align">LOGIN</h4>
        <form action="/" method="post">
          <div class="row">
            <div class="col s6 offset-s3">
              <div class="input-field col s12" style="margin-bottom: 40px">
                <input type="email" id="email" name="email" value="" required class="validate">
                <label for="email">Email</label>
              </div>
              <div class="center-align" >
                <button class="waves-effect waves-light btn" type="submit">Submit</button>
              </div>
            </div>
          </div>
        </form>
      </div>

      <div class="">
        <p class="center-align">Not registerd yet? <a href="#modalSignup">Sign Up here</a></p>
        <div id="modalSignup" class="modal">
          <div class="modal-content">
            <h5>Welcome!</h5>
            <form action="/" method="post" class="row">
              <div class="input-field col s12">
                <input type="text" id="newName" name="newName" value="" required class="validate">
                <label for="newName">Your Name</label>
              </div>
              <div class="input-field col s12" style="margin-bottom: 40px">
                <input type="email" id="newEmail" name="newEmail" value="" required class="validate">
                <label for="newEmail">Your Email</label>
              </div>
              <div class="center-align" >
                <button class="waves-effect waves-light btn" type="submit">Submit</button>
              </div>
            </form>
            <h6></h6>
          </div>
        </div>
      </div>
      <div class="center-align">
        <a href="/tasks">Lihat Semua TODO</a>
      </div>
      <% if(error !== null) {%>
        <p class="center-align">
          <%= error %>
        </p>
      <% } %>
    </div>
  </body>
  <script type="text/javascript">
    $(document).ready(function(){
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
    $('.modal').modal();
    });
  </script>
</html>
