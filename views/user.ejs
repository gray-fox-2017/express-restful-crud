<!DOCTYPE html>
<html>
  <head>
    <title>To Do List</title>
    <%- include ./partial/stylenya.ejs %>
  </head>
  <body>
    <h3 style="padding: 10% 15% 0 15%">Berikut list mu!</h3>
    <h6 style="padding: 0 15% 0 15%"> ID : <%=id%> &nbsp &nbsp &nbsp User : <%= user%></h6>
    <div style="padding: 5% 15% 10% 15%">
      <table class="striped">
        <thead>
        <tr>
          <th style="padding-left: 30px;">No.</th>
          <th>Task</th>
          <th>Completed?</th>
          <th>Tanggal dibuat</th>
          <th>Option</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i=0; i<data.length;i++) { %>
          <tr>

            <td style="padding-left: 30px;"><%= i+1 %></td>
            <td><%= data[i].task %>&nbsp &nbsp &nbsp &nbsp <a href="/user/todo-edit/<%=data[i].id%>"><i class="tiny material-icons">mode_edit</i></a></td>
            <% if (data[i].is_complete === true) { %>
                  <td>Sudah</td>
                <% } else { %>
                  <td>Belum</td>
                <% } %>
            <td><%= helper(data[i].createdAt) %></td>
            <td><a href="/user/todo/<%=data[i].user_id%>/<%=data[i].id%>"><i class="small material-icons">done_all</i>&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp</a><a href="/user/todo-delete/<%=data[i].user_id%>/<%=data[i].id%>" onClick="return confirm('anda yakin?')"><i class="small material-icons">delete</i></a><td>

          </tr>
        <% } %>
      </tbody>
      </table>
    </div>
    <div style="padding: 0 15% 5% 15%">
      <h5>Tambah task baru:</h5>
    <form method="post" action="./buat-baru">
      <input type="text" name="aidi" placeholder="id jangan di ganti" value=<%=id%>>
      <input type="text" name="taskBaru" placeholder="Task baru">
      <button type="submit">Add!</button>
    </form>
  </div>
  </body>
</html>
