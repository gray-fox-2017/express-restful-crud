<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Your Memo's</title>
    <link rel="stylesheet" href="stylesheets/canvas.css">
  </head>
  <body>
    <div class="" id="container">
      <h2 align='center'>Write Your Memo's</h2>
      <hr>
      <form class="" action="/shows/edit/<%= data.id%>" method="post">
        <table style="width:50%" align="center">
          <thead>
            <tr>
              <td>
                TITLE:<br>
                <input type="text" name="title" value="<%=data.title %>">
              </td>
              <tr>
                <td>
                  <select class="" name="is_complete">
                    <option value="<%=data.is_complete %>"><%=data.is_complete %></option>
                    <%if (data.is_complete === "completed") { %>
                      <option value="uncomplete">uncomplete</option>
                    <%} else {%>
                      <option value="complete">complete</option>
                    <%
                      }
                    %>


                  </select>
                  <select name='id_user' required>
                     <option value='<%= data.id_user %>' ><%= data.User.email %></option>
                     <%
                     users.forEach(value => {
                       if (value.id != data.id_user) {
                     %>
                     <option value='<%= value.id %>'><%= value.email %></option>
                     <%
                       }
                     });
                     %>
                 </select>
                 <button type="submit" name="add">Submit</button>
                </td>
              </tr>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </form>
    </div>
  </body>
</html>