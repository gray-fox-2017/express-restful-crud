<!DOCTYPE html>
<html>

<head>
  <% include partial/partial.ejs %>
</head>

<body>
  <h1>USERS</h1>
  <div class="row">
    <form class="col s12" action="/user" method="post">
      <div class="row">
        <div class="col s12">
          <div class="input-field inline">
            <input placeholder="Username" , id="username" type="text" class="validate" name="username">
            <label for="first_name"></label>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <div class="input-field inline">
            <input placeholder="Email" id="email" type="email" class="validate" name="email">
            <label for="email" data-error="wrong" data-success="right"></label>
          </div>
        </div>
      </div>

      <button class="waves-effect waves-light btn" type="submit">submit</button>
    </form>
  </div>
  <div>
    <table class="striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Task</th>
          <th>Completion</th>
          <th>Created at</th>
          <th>Options</th>
        </tr>
      </thead>

      <tbody>
        <%
        data.forEach((d) => {
      %>
          <tr>
            <td>
              <%= d.id %>
            </td>
            <td>
              <%= d.title %>
            </td>
            <td>
              <%= d.completed %>
            </td>
            <td>
              <%= d.createdAt %>
            </td>
            <td>
              <a href="./user/edit/<%- d.id %>"><button class="btn-floating waves-effect waves-light lightgreen">edit</button></a>
              <a href="./user/delete/<%- d.id %>"><button class="btn-floating waves-effect waves-light lightgreen">delete</button></a>
            </td>
          </tr>
          <%
      })
      %>
  </div>
</body>

</html>