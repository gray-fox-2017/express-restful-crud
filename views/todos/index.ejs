<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <div class="col s12 m12">
        <a href="/todos/add" class="btn-floating btn-flatwave-effect waves-light blue" ><i class="material-icons">add</i></a>
        <hr>
        <table class="stripped responsive-table">
          <thead>
            <tr>
              <th>NO</th>
              <th>TASK</th>
              <th>COMPLETED</th>
              <th>USER</th>
              <th>CREATED AT</th>
              <th>ACTION</th>
            </tr>
          </thead>
          <tbody>
            <% let i=1; result.forEach((item)=> { %>
              <tr>
                <td>
                  <%= i++ %>
                </td>
                <td>
                  <%= item.task %>
                </td>
                <td>
                  <%= item.completed %>
                </td>
                <td>
                  <%= item.User.email %>
                </td>
                <td>
                  <%= helper.datesformate(item.createdAt) %>
                </td>
                <td>
                  <a href="/todos/edit/<%= item.id %>" class="waves-effect waves-light btn">
                    <i class="material-icons">edit</i></a> |
                    <a href="/todos/delete/<%= item.id %>" class="waves-effect btn red" onclick="return confirm('Are you sure you want to delete this item?');">
                      <i class="material-icons">delete</i></a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% include ../partials/footer %>
