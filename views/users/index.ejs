<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <a href="/users/add" class="btn-floating btn-flat waves-effect waves-light blue"><i class="material-icons">add</i></a>
            <hr>
            <table class="striped responsive-table">
                <thead>
                    <tr>
                        <th>
                            No
                        </th>
                        <th>
                            NAME
                        </th>
                        <th>
                            EMAIL
                        </th>

                        <th>
                            ACTON
                        </th>
                    </tr>
                </thead>
                <tbody>
                <% let i = 1; users.forEach(user=>{ %>
                    <tr>
                      <td>
                        <%= i++ %>
                      </td>
                        <td>
                          <%= user.name %>
                        </td>
                        <td>
                          <%= user.email %>
                        </td>
                        <td>
                            <a href="/users/edit/<%= user.id %>"  class="waves-effect waves-light btn"><i class="material-icons">edit</i></a> | <a href="/users/delete/<%= user.id %>" class="btn red" onclick="return confirm('Are you sure you want to delete this item?');"><i class="material-icons">delete</i></a>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>

    </div>
    </div>

    <% include ../partials/footer %>
