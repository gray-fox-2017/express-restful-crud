<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Your Memo's</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.css">
    <link rel="stylesheet" href="stylesheets/canvas.css">
  </head>
  <body>
    <div class="" id="">
      <h2 align='center'>Write Your Memo's</h2>
      <hr>
      <form class="" action="/users/add" method="post">
        <table style="width:50%" align="center">
          <thead>
            <tr>
              <td>
                NAME:
                <input type="text" name="name" value="">
              </td>
              <td>
                EMAIL:
                <input type="email" name="email" value="">
              </td>

              <td>
              <button type="submit" name="add">Submit</button>
              </td>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>

        <table class="striped" style="width:60%" align='center'>
          <thead>
            <tr>

              <td><b>NO</b></td>
              <td><b>NAME</b></td>
              <td><b>EMAIL</b></td>
              <td><b>ACTION</b></td>

            </tr>
          </thead>
          <tbody>

            <%
              data_user.forEach((value)=>{
            %>
            <tr>

              <td><%= value.id%></td>
              <td><%= value.name%></td>
              <td><%= value.email%></td>
              <td><a href="/users/edit/<%=value.id%>">EDIT</a> | <a href="/users/delete_user/<%=value.id%>">DELETE</a></td>

            </tr>
            <%
            })
            %>

            <tr>
              <td><a class="waves-effect waves-light btn" href="/">BACK</a></td>
            </tr>

          </tbody>
        </table>

      </form>
    </div>
  </body>
</html>